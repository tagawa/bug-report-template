{
  "manifest_version": 2,
  "name": "Bug Report Template",
  "description": "A browser extension to quickly add a simple bug report template to text areas.",
  "version": "1.0.1",
  "default_locale": "en",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  }
}
